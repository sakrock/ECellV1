<%- include("../partials/header") %>

<style type="text/css">
	.html2 {
	background-image: url("/images/gallery.jpg"), linear-gradient(rgba(0,0,0,1),rgba(0,0,0,1)); 
	background-blend-mode: overlay;
	background-size: 100% 100%;
	background-repeat: no-repeat;

	color:black;
}
</style>

<div class="container">

	<header class="jumbotron html2">
		<div class="container">
			<h1>Gallery</h1>	
			<% if(userIsAdmin){ %>
			<a href="/gallery/new" class="btn btn-danger btn-sm">NEW</a>
			<% } %>
		</div>
		
	</header>
<div class="row">
	<% myGallery.forEach(function(gallery){ %>
	<div class="col-md-4 ">
		<div class="myCard">
		<a href="/gallery/<%= gallery._id %>">
		<img class="card-img-top" src="<%= gallery.image %>" alt="Gallery_image">
		<hr>	
		<h2 class="card-title font-weight-bold"><%= gallery.description.toUpperCase() %></h2>
		<% if(userIsAdmin){ %>
					<a class="btn btn-warning btn-sm" href="/gallery/<%= gallery._id %>/edit">EDIT</a>
					<form class="delete-form" method="POST" action="/gallery/<%= gallery._id %>?_method=DELETE">
						<input class="btn btn-danger btn-sm" type="submit" value="Destroy">
					</form>
					<% } %>
		</a>
		</div>
	</div>
	<% }) %>
	
</div>



</div>

<hr>
<%- include("../partials/footer") %>