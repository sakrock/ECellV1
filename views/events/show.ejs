<%- include('../partials/header') -%>

<div class="container" style="text-align: center; padding: 4px;background: #F8F8F8;">
	<div class="row">
		<div class="col-8" style="margin: 0px auto;">
			<img src="<%= event.image %>"  style="width: 100%;">
			<hr>
			<h2>
				<%= event.title.toUpperCase() %>
			</h2>
			<p>
				<%- event.description %>
			</p>
			<% if(userIsAdmin){ %>
			<a class="btn btn-warning btn-sm" href="/events/<%= event._id %>/edit">EDIT</a>
			<form class="delete-form" method="POST" action="/events/<%= event._id %>?_method=DELETE">
				<input class="btn btn-danger btn-sm" type="submit" value="Destroy">
			</form>
			<% } %>
		</div>
		
	</div>
	
	
</div>

<hr>


<%- include('../partials/footer') -%>