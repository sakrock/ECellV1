<%- include('../partials/header') -%>

<div class="container">
	<h1 style="text-align: center">EDIT EVENT - <%= event.title %></h1>
	<div class="row">
		
		<div style="width: 50%; margin: 25px auto">
			
			<form method="POST", action="/events/<%= event._id %>?_method=PUT">
				<div class="form-group">
					<input class="form-control" type="text" name="newEvent[title]" placeholder="Title" value="<%= event.title %>" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="newEvent[image]"
					placeholder="Image URL" value="<%= event.image %>" required>
				</div>

				<div class="form-group">
					<!-- <input class="form-control" type="text" name="newEvent[description]"
					placeholder="Short Description" value="<%= event.description %>"> -->
					<textarea class="form-control" name="newEvent[description]" placeholder="Short Description" style="height: 200px;"><%= event.description %></textarea>
				</div>


				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
				
				
			</form>
			<a href="/events">Go Back!!</a>
		</div>
		
	</div>
</div>
